extends layout

block content
	h2 这是主页~
	each post,index in posts
		h2
			a(href='u/#{post.name}/#{post.time.day}/#{post.title}') #{post.title}
		p.info
			| 作者： 
			a(href='u/#{post.name}') #{post.name}
			|  | 日期： #{post.time.minute}
			| 标签： 
			each tag in post.tags
				a.tag(href='/tag/#{tag}') #{tag}			
		p #{post.post}
		p.info 
			| 阅读: #{post.pv} | 评论 #{post.comments.length}

	include paging
